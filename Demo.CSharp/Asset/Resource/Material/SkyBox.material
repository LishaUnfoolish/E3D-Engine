<?xml version="1.0" encoding="utf-8"?>
<ConfigSystem>
	<TextureAtlas>
		<Item ID="1" n="back" x="0" y="0" w="1024" h="1024" width="3072" height="2048"/>
		<Item ID="2" n="right" x="1024" y="0" w="1024" h="1024" width="3072" height="2048"/>
		<Item ID="3" n="front" x="2048" y="0" w="1024" h="1024" width="3072" height="2048"/>
		<Item ID="4" n="left" x="0" y="1024" w="1024" h="1024" width="3072" height="2048"/>
		<Item ID="5" n="top" x="1024" y="1024" 	w="1024" h="1024" width="3072" height="2048"/>
		<Item ID="6" n="down" x="2048" y="1024"	w="1024" h="1024" width="3072" height="2048"/>
	</TextureAtlas>
	<SkyBoxConfig>
		<Item ID="1" Front="3" Back="1" Left="4" Right="2" Top="5" Down="6"/>
	</SkyBoxConfig>
	<MaterialConfig>
		<!--
			TextureClampType 0 CLAMP_TO_EDGE 1 REPEAT 2 MIRRORED_REPEAT
			TextureFilterType 0 LINEAR 1 NEAREST
			CullFace 0 不剔除背面 1 剔除背面
			EnableDepthTest 0 关闭深度测试和深度缓冲区 1 开启深度测试与深度缓冲区
			IsBlend 0 不做颜色叠加的混合 1 开启颜色叠加 
		-->
      	<Item ID=1 ShaderID = 1 Color="ffffffff" BlendType = 0 EnableDepthTest=0 CullFace = 0 TextureClampType=0 TextureFilterType = 0/>
	</MaterialConfig>
	<ShaderConfig>
		<!--
			uniform 类型 
			mat4 	四阶矩阵
			mat3 	三阶矩阵
			mat2 	二阶矩阵
			vec2 	二维浮点数
			vec3 	三维浮点数
			vec4 	四维浮点数
			float 	浮点数
			int 	整数
			sampler2D 纹理
				
			attribute 类型 
			POSITION		顶点坐标
			NORMAL			法线
			COLOR			颜色
			TRANSPOSITION	顶点位移坐标 有批次合并的使用
			TRANSSCALE		顶点缩放值 有批次合并的使用
			TRANSROTATE		顶点旋转值 有批次合并的使用
			SHADERINDEX		使用的片段着色器的序号
			TANGENT			切线
			BONEINDEX		骨骼索引
			BONEWEIGHT		骨骼权重
			TEXTURECOORD   纹理坐标
		--> 
		<Item 
					ID				= 1 
					VertexShader	= "shader/SkyBoxVertex.shader" 
					FragmentShader	= "shader/SkyBoxFragment.shader" 	
					UniformVariable	= "sampler2D:myTexture0-texture/skyBox.png;" 
									   
					AttribVariable	= "POSITION:position;
									   COLOR:color;
									   TEXTURECOORD:inputTextureCoordinate; 
									   NORMAL:attr_normal;"
		/>
	</ShaderConfig>
</ConfigSystem>
