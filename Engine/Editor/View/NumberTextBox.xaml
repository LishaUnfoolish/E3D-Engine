<UserControl x:Class="E3DEditor.View.NumberTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:E3DEditor.View"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300" AllowDrop="True"  Background="White">
	<Grid>
		<TextBox x:Name="tbx" AllowDrop="True" Background="Transparent" Style="{StaticResource WarkTextBoxStyle}" PreviewTextInput="tbx_PreviewTextInput" InputMethod.IsInputMethodEnabled="False" />
	</Grid>
</UserControl>
